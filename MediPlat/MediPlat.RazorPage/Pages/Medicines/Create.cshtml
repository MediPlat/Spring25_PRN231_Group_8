@page
@model MediPlat.RazorPage.Pages.Medicines.CreateModel

@{
    ViewData["Title"] = "Thêm mới Thuốc";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header text-center" style="background-color: #ffccd5">
            <h2><i class="bi bi-capsule"></i> Thêm mới Thuốc</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Medicine.Status" value="Active" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Medicine.Name" class="form-label fw-bold">💊 Tên thuốc:</label>
                    <input asp-for="Medicine.Name" class="form-control" placeholder="Nhập tên thuốc..." />
                    <span asp-validation-for="Medicine.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Medicine.DosageForm" class="form-label fw-bold">🏥 Dạng thuốc:</label>
                    <input asp-for="Medicine.DosageForm" class="form-control" placeholder="Nhập dạng thuốc (viên nén, siro, tiêm...)" />
                    <span asp-validation-for="Medicine.DosageForm" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Medicine.Strength" class="form-label fw-bold">💪 Hàm lượng:</label>
                    <input asp-for="Medicine.Strength" class="form-control" placeholder="Nhập hàm lượng (500mg, 10ml...)" />
                    <span asp-validation-for="Medicine.Strength" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Medicine.SideEffects" class="form-label fw-bold">⚠️ Tác dụng phụ:</label>
                    <textarea asp-for="Medicine.SideEffects" class="form-control" rows="3" placeholder="Nhập tác dụng phụ nếu có..."></textarea>
                    <span asp-validation-for="Medicine.SideEffects" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Thêm mới</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
