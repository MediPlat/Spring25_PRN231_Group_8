@page "{id:guid}"
@model MediPlat.RazorPage.Pages.Subscriptions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Subscription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="subscriptionResponse.Id" />
            <div class="form-group">
                <input type="hidden" asp-for="subscriptionRequest.Name" class="form-control" />
                <span asp-validation-for="subscriptionRequest.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="subscriptionRequest.CreatedDate" class="form-control" />
                <span asp-validation-for="subscriptionRequest.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="subscriptionRequest.Price" class="control-label"></label>
                <input asp-for="subscriptionRequest.Price" class="form-control" />
                <span asp-validation-for="subscriptionRequest.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="subscriptionRequest.EnableSlot" class="control-label"></label>
                <input asp-for="subscriptionRequest.EnableSlot" class="form-control" />
                <span asp-validation-for="subscriptionRequest.EnableSlot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="subscriptionRequest.Description" class="control-label"></label>
                <input asp-for="subscriptionRequest.Description" class="form-control" />
                <span asp-validation-for="subscriptionRequest.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
