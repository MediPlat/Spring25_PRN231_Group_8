@page
@model MediPlat.RazorPage.Pages.Prescriptions.IndexModel
@{
    ViewData["Title"] = "Danh sách đơn thuốc";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-primary">📋 Danh sách đơn thuốc</h2>
        @if (User.IsInRole("Doctor"))
        {
            <a asp-page="./Create" class="btn btn-success"><i class="fas fa-plus"></i> Tạo mới</a>
        }
    </div>

    <div class="row mt-3">
        @foreach (var slot in Model.Prescriptions)
        {
            <div class="col-md-4">
                <div class="card shadow-sm p-3 mb-4 bg-white rounded border-0">
                    <div class="card-body">
                        <h5 class="card-title text-dark"><i class="fas fa-calendar-alt"></i> @slot.CreatedDate.ToString("dd/MM/yyyy")</h5>
                        <p class="card-text"><strong>Bác sĩ:</strong> 🩺 @slot.Doctor?.FullName</p>
                        <p class="card-text"><strong>Bệnh nhân:</strong> 👤 @slot.Profile?.FullName</p>
                        <p class="card-text"><strong>Ghi chú:</strong> 📝 @slot.Notes</p>

                        <p class="card-text">
                            <strong>Trạng thái:</strong>
                            @if (slot.Status == "Pending")
                            {
                                <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            }
                            else if (slot.Status == "Confirmed")
                            {
                                <span class="badge bg-success">Đã xác nhận</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Đã hủy</span>
                            }
                        </p>

                        @if (slot.Status != "Confirmed" && slot.Status != "Cancelled")
                        {
                            <form method="post" class="mt-2">
                                <input type="hidden" name="appointmentSlotId" value="@slot.Id" />
                                <select name="status" class="form-control mb-2">
                                    <option value="Pending" selected="@(slot.Status == "Pending")">Chờ duyệt</option>
                                    <option value="Confirmed" selected="@(slot.Status == "Confirmed")">Đã xác nhận</option>
                                    <option value="Cancelled" selected="@(slot.Status == "Cancelled")">Đã hủy</option>
                                </select>
                                <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-sync-alt"></i> Cập nhật trạng thái</button>
                            </form>
                        }

                        <div class="mt-3">
                            <a asp-page="./Details" asp-route-id="@slot.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> Chi tiết</a>

                            @if (slot.Status != "Confirmed" && slot.Status != "Cancelled")
                            {
                                <a asp-page="./Edit" asp-route-id="@slot.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Cập nhật</a>
                            }

                            <form method="post" asp-page-handler="Delete" asp-route-id="@slot.Id"
                                  onsubmit="return confirm('Bạn có chắc chắn muốn xóa đơn thuốc này?');"
                                  class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Xóa</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
