@page
@model MediPlat.RazorPage.Pages.Doctors.EditModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Edit Doctor Profile</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="doctorRequest.Id" />

                        <div class="mb-3">
                            <label asp-for="doctorRequest.UserName" class="form-label">Username</label>
                            <input asp-for="doctorRequest.UserName" class="form-control" placeholder="Enter username" />
                            <span asp-validation-for="doctorRequest.UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="doctorRequest.FullName" class="form-label">Full Name</label>
                            <input asp-for="doctorRequest.FullName" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="doctorRequest.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="doctorRequest.Email" class="form-label">Email</label>
                            <input asp-for="doctorRequest.Email" class="form-control" placeholder="Enter email" />
                            <span asp-validation-for="doctorRequest.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="doctorRequest.PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="doctorRequest.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="doctorRequest.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="doctorRequest.FeePerHour" class="form-label">Fee Per Hour</label>
                            <input asp-for="doctorRequest.FeePerHour" class="form-control" placeholder="Enter fee per hour" />
                            <span asp-validation-for="doctorRequest.FeePerHour" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="doctorRequest.Degree" class="form-label">Degree</label>
                            <input asp-for="doctorRequest.Degree" class="form-control" placeholder="Enter degree" />
                            <span asp-validation-for="doctorRequest.Degree" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="doctorRequest.AcademicTitle" class="form-label">Academic Title</label>
                            <input asp-for="doctorRequest.AcademicTitle" class="form-control" placeholder="Enter academic title" />
                            <span asp-validation-for="doctorRequest.AcademicTitle" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4">Save</button>
                            <a asp-page="./Profile" class="btn btn-secondary px-4">Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
