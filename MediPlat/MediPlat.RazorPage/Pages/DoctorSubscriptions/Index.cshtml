@page
@model MediPlat.RazorPage.Pages.DoctorSubscriptions.IndexModel

@{
    ViewData["Title"] = "Danh sách Gói Đăng Ký";
}

<h1 class="text-primary text-center my-4"><i class="bi bi-list-check"></i> Gói Đăng Ký</h1>

<div class="container d-flex justify-content-center align-items-center">
    <div class="row w-100 justify-content-center">
        @if (!Model.DoctorSubscriptions.Any())
        {
            <p class="text-center">
                <a asp-page="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Tạo mới</a>
            </p>
        }

        @foreach (var item in Model.DoctorSubscriptions)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-lg border-0 rounded-lg p-3">
                    <div class="card-body">
                        <p><strong>📌 Slot:</strong> @item.EnableSlot</p>
                        <p><strong>📅 Bắt đầu:</strong> @item.StartDate.ToShortDateString()</p>
                        <p><strong>📅 Kết thúc:</strong> @item.EndDate.ToShortDateString()</p>
                        <p><strong>🕒 Cập nhật:</strong> @(item.UpdateDate?.ToShortDateString() ?? "N/A")</p>
                        <p><strong>⚠️ Trạng thái:</strong> <span class="badge @(item.Status == "Active" ? "bg-success" : "bg-danger")">@item.Status</span></p>
                        <p><strong>👨‍⚕️ Bác sĩ:</strong> @(item.Doctor?.FullName ?? "N/A")</p>
                        <p><strong>🏥 Gói đăng ký:</strong> @(item.Subscription?.Name ?? "N/A")</p>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Xem
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.DoctorSubscriptions.Any())
        {
            <div class="alert alert-warning text-center w-100">
                <i class="bi bi-exclamation-triangle"></i> Hiện tại không có Gói Đăng Ký nào.
            </div>
        }
    </div>
</div>
