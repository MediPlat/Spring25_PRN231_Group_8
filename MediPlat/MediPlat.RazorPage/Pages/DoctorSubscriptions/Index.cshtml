@* 
@if (Model.DoctorSubscriptions != null)
{
    <div class="table-responsive">
        <table class="table table-hover shadow-lg border rounded">
            <thead class="table-dark text-center">
                <tr>
                    <th>📌 Slot</th>
                    <th>📅 Bắt đầu</th>
                    <th>📅 Kết thúc</th>
                    <th>🕒 Cập nhật</th>
                    <th>⚠️ Trạng thái</th>
                    <th>👨‍⚕️ Bác sĩ</th>
                    <th>🏥 Gói đăng ký</th>
                    <th>⚙️ Hành động</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model.DoctorSubscriptions)
                {
                    <tr class="align-middle">
                        <td>@Html.DisplayFor(modelItem => item.EnableSlot)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.UpdateDate)</td>
                        <td>
                            <span class="badge @(item.Status == "Active" ? "bg-success" : "bg-danger")">
                                @item.Status
                            </span>
                        </td>
                        <td>@(item.Doctor?.FullName ?? "N/A")</td>
                        <td>@(item.Subscription?.Name ?? "N/A")</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Xem
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        <i class="bi bi-exclamation-triangle"></i> Hiện tại không có Gói Đăng Ký nào.
    </div>
} *@
