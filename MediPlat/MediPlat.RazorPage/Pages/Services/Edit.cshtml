@page
@model MediPlat.RazorPage.Pages.Services.EditModel

@{
    ViewData["Title"] = "Chỉnh sửa dịch vụ";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header text-center" style="background-color: #ffeb99">
            <h2><i class="bi bi-pencil-square"></i> Chỉnh sửa dịch vụ</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="Service.Id" />

                <div class="mb-3">
                    <label asp-for="Service.Title" class="form-label fw-bold">Tên dịch vụ:</label>
                    <input asp-for="Service.Title" class="form-control" placeholder="Nhập tên dịch vụ..." />
                    <span asp-validation-for="Service.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Service.SpecialtyId" class="form-label">Chuyên khoa:</label>
                    <select asp-for="Service.SpecialtyId" class="form-select" asp-items="Model.SpecialtyList"></select>
                    <span asp-validation-for="Service.SpecialtyId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Service.Description" class="form-label fw-bold">Mô tả:</label>
                    <input asp-for="Service.Description" class="form-control" placeholder="Nhập mô tả..." />
                    <span asp-validation-for="Service.Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
