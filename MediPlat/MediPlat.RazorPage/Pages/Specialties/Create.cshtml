@page
@model MediPlat.RazorPage.Pages.Specialties.CreateModel

@{
    ViewData["Title"] = "Thêm mới chuyên khoa";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header text-center" style="background-color: #ffccd5">
            <h2>Thêm mới chuyên khoa</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Specialty.Name" class="form-label fw-bold">Tên chuyên khoa: </label>
                    <input asp-for="Specialty.Name" class="form-control" placeholder="Nhập tên tên chuyên khoa..." />
                    <span asp-validation-for="Specialty.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Specialty.Description" class="form-label fw-bold">Mô tả:</label>
                    <input asp-for="Specialty.Description" class="form-control" placeholder="Nhập mô tả" />
                    <span asp-validation-for="Specialty.Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-page="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Thêm mới</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
