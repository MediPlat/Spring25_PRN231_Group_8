@page
@model MediPlat.RazorPage.Pages.Specialties.DeleteModel

@{
    ViewData["Title"] = "Xác nhận xóa chuyên khoa";
}

<div class="container mt-4">
    <h1 class="mb-3 text-danger"><i class="bi bi-trash"></i> Xác nhận xóa chuyên khoa</h1>

    <div class="alert alert-warning">
        <p><strong>Bạn có chắc chắn muốn xóa chuyên khoa này không?</strong></p>
        <p>Tên: <strong>@Model.Specialty.Name</strong></p>
        <p>Mô tả: <strong>@Model.Specialty.Description</strong></p>
        <p class="text-danger">Hành động này không thể hoàn tác.</p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Specialty.Id" />

        <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-check-circle"></i> Xác nhận xóa
        </button>

        <a asp-page="Index" class="btn btn-secondary px-4">
            <i class="bi bi-arrow-left"></i> Hủy
        </a>
    </form>
</div>
