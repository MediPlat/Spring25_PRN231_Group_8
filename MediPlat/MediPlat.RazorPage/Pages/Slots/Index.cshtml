    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].SessionFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Service)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Slot) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Book</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
