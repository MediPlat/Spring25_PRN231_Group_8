@page
@using System.Security.Claims
@model MediPlat.RazorPage.Pages.Slots.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (!HttpContext.User.FindFirst(ClaimTypes.Role).Value.Equals("Patient"))
{
    <p>
        <a asp-page="Create" class="btn btn-sm btn-primary mx-1">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Slot
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].SessionFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot[0].Service)
            </th>
            <th>Specialty</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Slot) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @item.StartTime.Value.ToString("hh:mm:ss tt")
            </td>
            <td>
                @item.EndTime.Value.ToString("hh:mm:ss tt")
            </td>
            <td>
                @item.Date.Value.ToString("MM/dd/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SessionFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Title)
            </td>
            <td>@item.Service.Specialty.Name</td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary mx-1">Book</a>
                    @if (!HttpContext.User.FindFirst(ClaimTypes.Role).Value.Equals("Patient"))
                {
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mx-1">Edit </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mx-1">Delete</a> 
                }    
            </td>
        </tr>
}
    </tbody>
</table>
