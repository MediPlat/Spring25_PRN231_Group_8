@page
@model MediPlat.RazorPage.Pages.Experiences.EditModel

@{
    ViewData["Title"] = "Chỉnh sửa Experience";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-warning text-dark text-center">
            <h2><i class="bi bi-pencil-square"></i> Chỉnh sửa Experience</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label class="form-label">🏥 Chuyên khoa</label>
                    <input value="@Model.SpecialtyName" class="form-control" readonly />
                </div>
                <input type="hidden" asp-for="Experience.SpecialtyId" />

                <div class="mb-3">
                    <label asp-for="Experience.Title" class="form-label"></label>
                    <input asp-for="Experience.Title" class="form-control" placeholder="Nhập tiêu đề..." />
                    <span asp-validation-for="Experience.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Experience.Description" class="form-label"></label>
                    <textarea asp-for="Experience.Description" class="form-control" rows="3" placeholder="Nhập mô tả..."></textarea>
                    <span asp-validation-for="Experience.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Experience.Certificate" class="form-label"></label>
                    <input asp-for="Experience.Certificate" class="form-control" placeholder="Nhập chứng chỉ..." />
                    <span asp-validation-for="Experience.Certificate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">👨‍⚕️ Bác sĩ</label>
                    <input value="@Model.DoctorFullName" class="form-control" readonly />
                    <input type="hidden" asp-for="Experience.DoctorId" />
                </div>

                @if (Model.IsAdmin)
                {
                    <div class="mb-3">
                        <label asp-for="Experience.Status" class="form-label"></label>
                        <select asp-for="Experience.Status" class="form-select">
                            <option value="Active">Active</option>
                            <option value="Suspended">Suspended</option>
                        </select>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        <label asp-for="Experience.Status" class="form-label"></label>
                        <input asp-for="Experience.Status" class="form-control" readonly />
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <a asp-page="./Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
