@page
@model MediPlat.RazorPage.Pages.Experiences.EditModel

<h2>Edit Experience</h2>

<form method="post">
    @if (!Model.IsAdmin)
    {
        <div class="form-group">
            <label asp-for="Experience.SpecialtyId" class="control-label"></label>
            <select asp-for="Experience.SpecialtyId" class="form-control" asp-items="ViewBag.SpecialtyId">
                <option value="">-- Chọn chuyên khoa --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Experience.Title" class="control-label"></label>
            <input asp-for="Experience.Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Experience.Description" class="control-label"></label>
            <textarea asp-for="Experience.Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Experience.Certificate" class="control-label"></label>
            <input asp-for="Experience.Certificate" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Experience.Doctor.FullName" class="control-label"></label>
            <input asp-for="Experience.Doctor.FullName" class="form-control" readonly />
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Admin chỉ có thể chỉnh sửa trạng thái (Status) của Experience.
        </div>
    }

    @if (Model.IsAdmin)
    {
        <div class="form-group">
            <label asp-for="Experience.Status" class="control-label"></label>
            <select asp-for="Experience.Status" class="form-control">
                <option value="Active">Active</option>
                <option value="Suspended">Suspended</option>
            </select>
        </div>
    }
    else
    {
        <div class="form-group">
            <label asp-for="Experience.Status" class="control-label"></label>
            <input asp-for="Experience.Status" class="form-control" readonly />
        </div>
    }

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>
