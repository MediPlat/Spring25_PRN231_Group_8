@page
@model MediPlat.RazorPage.Pages.Experiences.DeleteModel

@{
    ViewData["Title"] = "Xóa Experience";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-danger text-white text-center">
            <h2><i class="bi bi-trash"></i> Xóa Experience</h2>
        </div>
        <div class="card-body">
            <h5 class="text-center text-danger">Bạn có chắc chắn muốn xóa Experience này không?</h5>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">📝 Tiêu đề:</dt>
                        <dd class="col-sm-8">@Model.Experience?.Title</dd>

                        <dt class="col-sm-4">📖 Mô tả:</dt>
                        <dd class="col-sm-8">@Model.Experience?.Description</dd>

                        <dt class="col-sm-4">📜 Chứng chỉ:</dt>
                        <dd class="col-sm-8">@Model.Experience?.Certificate</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">👨‍⚕️ Bác sĩ:</dt>
                        <dd class="col-sm-8">@(Model.Experience?.Doctor?.FullName ?? "Không có thông tin")</dd>

                        <dt class="col-sm-4">🏥 Chuyên khoa:</dt>
                        <dd class="col-sm-8">@(Model.Experience?.Specialty?.Name ?? "Không có chuyên khoa")</dd>
                    </dl>
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Experience.Id" />
                <div class="d-flex justify-content-center mt-3">
                    <a asp-page="./Index" class="btn btn-secondary me-2"><i class="bi bi-arrow-left"></i> Quay lại</a>
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>
