@page
@model MediPlat.RazorPage.Pages.Experiences.DetailsModel

@{
    ViewData["Title"] = "Chi tiết Experience";
}

<h1 class="mb-4">📄 Chi tiết Experience</h1>

@if (Model.Experience != null)
{
    <div class="card shadow-sm p-4">
        <h4 class="mb-3">📝 Thông tin Experience</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">🏷️ Tiêu đề:</dt>
            <dd class="col-sm-9">@Model.Experience.Title</dd>

            <dt class="col-sm-3 font-weight-bold">📜 Mô tả:</dt>
            <dd class="col-sm-9">@Model.Experience.Description</dd>

            <dt class="col-sm-3 font-weight-bold">🎓 Chứng chỉ:</dt>
            <dd class="col-sm-9">@Model.Experience.Certificate</dd>

            <dt class="col-sm-3 font-weight-bold">👨‍⚕️ Bác sĩ:</dt>
            <dd class="col-sm-9">@(Model.Experience.Doctor?.FullName ?? "N/A")</dd>

            <dt class="col-sm-3 font-weight-bold">🏥 Chuyên khoa:</dt>
            <dd class="col-sm-9">@(Model.Experience.Specialty?.Name ?? "N/A")</dd>
        </dl>
    </div>

    <div class="mt-4">
        <a asp-page="./Edit" asp-route-id="@Model.Experience.Id" class="btn btn-warning">✏️ Sửa</a>
        <a asp-page="./Index" class="btn btn-secondary">⬅ Quay lại danh sách</a>
    </div>
}
else
{
    <div class="alert alert-danger mt-3">🚨 Không tìm thấy thông tin Experience.</div>
    <a asp-page="./Index" class="btn btn-secondary mt-2">⬅ Quay lại danh sách</a>
}
